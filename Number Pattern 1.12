import java.util.Scanner;
class Main{
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        System.out.println("Enter the Input");
        int n =in.nextInt();
        int num=0;
        for(int i=1;i<=n;i++){
          for(int j=1;j<=i-1;j++){
              System.out.print(" ");
          }for(int j=0;j<=n;j++){
                System.out.print(j+" ");
            }
            System.out.println();
        }
    }
}
