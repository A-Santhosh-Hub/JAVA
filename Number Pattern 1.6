import java.util.Scanner;
class Main{
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        System.out.println("Enter the Input");
        int n =in.nextInt();
        int num=0;
        for(int i=0;i<=n;i++){
            for(int j=0;j<=i;j++){
                System.out.print(num+" ");
                num++;

            }
            System.out.println();
        }
    }
}
