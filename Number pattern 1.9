import java.util.Scanner;
class Main{
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        System.out.println("Enter the Input");
        int n =in.nextInt();
        int num=0;
        for(int i=1;i<=n;i++){
            for(int j=1;j<=n-i;j++){
                System.out.print(" ");
            }
            for(int j=1;j<2*i-1;j++){
                System.out.print(j+1);
            }
            System.out.println();
        }
    }
}
