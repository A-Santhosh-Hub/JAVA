        Scanner in = new Scanner(System.in);
        System.out.println("Enter the Input");
        int n =in.nextInt();
        for(int i=1;i<=n;i++) {
            for (int j = 1; j <= n-i+1; j++) {
                System.out.print("* ");
            }

            System.out.println(" ");
        }
            for (int k=1;k<n;k++){
                for(int j=1;j<=k+1;j++) {
                    System.out.print("* ");
                }
                System.out.println();
            }
        }
    }
